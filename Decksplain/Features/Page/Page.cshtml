@{
    Layout = "~/Features/Layout/Layout.cshtml";
}
<header class="page-header-container">
    <div class="page-header page-container">
        <a class="logo-container" href="/">
            <img class="logo" src="~/images/logo.svg" alt="Logo"/>
            <h1>Decksplain</h1>
        </a>
        <nav>
            <a href="@(Url.Action("Index", "HowToPrint") ?? throw new Exception("Cannot get how to print page"))">How to print</a>
            <a href="https://github.com/decksplain/decksplain.github.io">GitHub</a>
            <button class="button" style="display: none;" id="enable-offline">Enable offline cache</button>
            <button class="button" style="display: none;" id="disable-offline">Disable offline cache</button>
        </nav>
    </div>
</header>
<main class="page-main">
    <div class="page-container">
        @RenderBody()
    </div>
</main>
