@using Decksplain.Features.Card
@model Decksplain.Features.Game.Games
@{
    Layout = "~/Features/Page/Page.cshtml";
}
<section class="card-container">
    @foreach (CardDto game in Model.Cards)
    {
        @await Html.PartialAsync("~/Pages/Shared/CardFront.cshtml", game)
        @await Html.PartialAsync("~/Pages/Shared/CardBack.cshtml", game)
    }
</section>
<section class="paragraph-centered">
    <a href="@(Url.Action("Index", "GamesPrintable") ?? throw new Exception("Cannot get printable games page"))" class="button">🖨️ Printable page</a>
</section>
