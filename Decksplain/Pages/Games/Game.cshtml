@page "/games/{title}"
@using Decksplain.Extensions
@model GameModel
@{
    Layout = "Shared/_Page";
}
<section class="paragraph-centered">
    <p>@Model.CardDto.Description</p>
</section>
<div class="card-container">
    @await Html.PartialAsync("~/Pages/Shared/CardFront.cshtml", Model.CardDto)
    @await Html.PartialAsync("~/Pages/Shared/CardBack.cshtml", Model.CardDto)
</div>
<section class="paragraph-centered">
    <a href="@(Url.Page("/Games/Title/Printable", new { title = Model.CardDto.Title.Slugify() }) ?? throw new Exception("Cannot get printable game page"))" class="button">🖨️ Printable page</a>
</section>
